<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectofinal.DepositoController">

    <children>

        <!-- Fondo -->
        <ImageView fitHeight="500" fitWidth="800" preserveRatio="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <image>
                <Image url="@background.png" />
            </image>
        </ImageView>

        <!-- Panel principal -->
        <VBox alignment="CENTER" layoutX="200" layoutY="-10" prefHeight="420" prefWidth="400" spacing="15" style="-fx-background-color: rgba(0,0,0,0.45); -fx-background-radius: 14; -fx-padding: 25;">

            <children>

                <ImageView fitHeight="60" fitWidth="70">
                    <image>
                        <Image url="@logo.jpg" />
                    </image>
                </ImageView>

                <Label style="-fx-font-size: 26px; -fx-text-fill: #D4AF37; -fx-font-weight: bold;" text="Depositar Dinero" />

                <!-- SelecciÃ³n de cuenta -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #D4AF37;" text="Seleccione una cuenta" />
                    <ComboBox fx:id="comboCuenta" prefWidth="250">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Monedero Diario" />
                                <String fx:value="Monedero Ahorros" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <!-- Monto -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #D4AF37;" text="Monto a depositar" />
                    <TextField fx:id="inputMonto" promptText="Ej: 50000" />
                </VBox>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="btnConfirmar" onAction="#realizarDeposito" prefWidth="150" style="-fx-font-size: 16px; -fx-background-color: #D4AF37; -fx-text-fill: black; -fx-background-radius: 8;" text="Depositar" />

                    <Button fx:id="btnVolver" onAction="#initialize" prefWidth="120" style="-fx-font-size: 16px; -fx-background-color: #162447; -fx-text-fill: white; -fx-background-radius: 8;" text="Volver" />
                </HBox>

            </children>

        </VBox>

    </children>

</AnchorPane>
