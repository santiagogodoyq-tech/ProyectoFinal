<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.proyectofinal.ClienteController"
            prefWidth="1000" prefHeight="650"
            style="
                -fx-background-image: url('@background.png');
                -fx-background-size: cover;
                -fx-background-position: center;
            ">

    <top>
        <HBox spacing="25"
              alignment="CENTER_LEFT"
              style="-fx-background-color: linear-gradient(to right, #162447, #1f4068);">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Logo + Nombre -->
            <HBox spacing="15" alignment="CENTER_LEFT">

                <ImageView fitWidth="55" fitHeight="55"
                           preserveRatio="true"
                           smooth="true">
                    <image>
                        <Image url="@logo.jpg"/>
                    </image>
                </ImageView>

                <VBox spacing="2">
                    <Label fx:id="lblNombreCliente"
                           text="Nombre Cliente"
                           style="-fx-text-fill: white;
                                  -fx-font-size: 24px;
                                  -fx-font-weight: bold;"/>

                    <Label fx:id="lblRango"
                           text="Rango: Bronce"
                           style="-fx-text-fill: #ffd86b;
                                  -fx-font-size: 16px;"/>
                </VBox>

            </HBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnCerrarSesion"
                    text="Cerrar SesiÃ³n"
                    style="
                        -fx-background-color: #e94560;
                        -fx-text-fill: white;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                        -fx-padding: 10 20;
                        -fx-background-radius: 10;
                    "/>
        </HBox>
    </top>

    <!-- ===================  CENTER CONTENT  =================== -->
    <center>
        <VBox spacing="35" alignment="TOP_CENTER">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Saldo / Monederos -->
            <HBox spacing="25" alignment="CENTER">

                <VBox prefWidth="260"
                      spacing="10"
                      alignment="CENTER_LEFT"
                      style="
                        -fx-background-color: rgba(255,255,255,0.85);
                        -fx-padding: 20;
                        -fx-background-radius: 12;
                        -fx-effect: dropshadow(gaussian, #0003, 10, 0.3, 0, 2);
                      ">

                    <Label text="Monedero Principal"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <Label fx:id="lblSaldoPrincipal"
                           text="0.00"
                           style="-fx-font-size: 22px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #1f4068;"/>
                </VBox>

                <VBox prefWidth="260"
                      spacing="10"
                      alignment="CENTER_LEFT"
                      style="
                        -fx-background-color: rgba(255,255,255,0.85);
                        -fx-padding: 20;
                        -fx-background-radius: 12;
                        -fx-effect: dropshadow(gaussian, #0003, 10, 0.3, 0, 2);
                      ">

                    <Label text="Cuenta de Ahorros"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <Label fx:id="lblSaldoAhorros"
                           text="0.00"
                           style="-fx-font-size: 22px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #1f4068;"/>
                </VBox>

            </HBox>

            <!-- Operaciones -->
            <VBox spacing="20" alignment="CENTER">

                <Label text="Operaciones"
                       style="-fx-font-size: 22px;
                              -fx-font-weight: bold;
                              -fx-text-fill: white;"/>

                <HBox spacing="25" alignment="CENTER">

                    <Button fx:id="btnDepositar"
                            text="Depositar"
                            prefWidth="180" prefHeight="45"
                            style="-fx-background-color: #1f4068;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-background-radius: 10;"/>

                    <Button fx:id="btnRetirar"
                            text="Retirar"
                            prefWidth="180" prefHeight="45"
                            style="-fx-background-color: #1b1b2f;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-background-radius: 10;"/>

                    <Button fx:id="btnTransferir"
                            text="Transferir"
                            prefWidth="180" prefHeight="45"
                            style="-fx-background-color: #0091d5;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-background-radius: 10;"/>
                </HBox>

                <HBox spacing="25" alignment="CENTER">

                    <Button fx:id="btnHistorialTransacciones"
                            text="Historial de Transacciones"
                            prefWidth="220" prefHeight="45"
                            style="-fx-background-color: #162447;
                                   -fx-text-fill: white;
                                   -fx-font-size: 15px;
                                   -fx-background-radius: 10;"/>

                    <Button fx:id="btnHistorialPuntos"
                            text="Historial de Puntos"
                            prefWidth="220" prefHeight="45"
                            style="-fx-background-color: #162447;
                                   -fx-text-fill: white;
                                   -fx-font-size: 15px;
                                   -fx-background-radius: 10;"/>
                </HBox>

                <Button fx:id="btnCanjearPuntos"
                        text="Canjear Puntos"
                        prefWidth="300" prefHeight="50"
                        style="-fx-background-color: #ffd86b;
                               -fx-text-fill: #333;
                               -fx-font-size: 17px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 14;"/>
            </VBox>

        </VBox>
    </center>

</BorderPane>
