<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.proyectofinal.ClienteController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #f5f6fa;">

    <top>
        <HBox padding="20"
              spacing="25"
              alignment="CENTER_LEFT"
              style="-fx-background-color: linear-gradient(to right, #1f3c88, #4158a6);">

            <VBox spacing="2">
                <Label fx:id="lblNombreCliente"
                       text="Nombre Cliente"
                       style="-fx-text-fill: white;
                              -fx-font-size: 24px;
                              -fx-font-weight: bold;"/>

                <Label fx:id="lblRango"
                       text="Rango: Bronce"
                       style="-fx-text-fill: #ffd86b;
                              -fx-font-size: 16px;"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnCerrarSesion"
                    text="Cerrar SesiÃ³n"
                    style="-fx-background-color: #ff4f4f;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-padding: 10 20 10 20;
                           -fx-background-radius: 10;"/>
        </HBox>
    </top>


    <!-- ================= CENTER CONTENT ================= -->
    <center>
        <VBox spacing="35"
              alignment="TOP_CENTER"
              padding="30">

            <!-- ===== SALDOS ===== -->
            <HBox spacing="25" alignment="CENTER">

                <!-- Monedero Principal -->
                <VBox prefWidth="260"
                      spacing="10"
                      alignment="CENTER_LEFT"
                      style="-fx-background-color: white;
                             -fx-padding: 20;
                             -fx-background-radius: 12;
                             -fx-effect: dropshadow(gaussian, #aaaaaa55, 10, 0.3, 0, 2);">

                    <Label text="Monedero Principal"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <Label fx:id="lblSaldoPrincipal"
                           text="0.00"
                           style="-fx-font-size: 22px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #1f3c88;"/>
                </VBox>

                <VBox prefWidth="260"
                      spacing="10"
                      alignment="CENTER_LEFT"
                      style="-fx-background-color: white;
                             -fx-padding: 20;
                             -fx-background-radius: 12;
                             -fx-effect: dropshadow(gaussian, #aaaaaa55, 10, 0.3, 0, 2);">

                    <Label text="Cuenta de Ahorros"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <Label fx:id="lblSaldoAhorros"
                           text="0.00"
                           style="-fx-font-size: 22px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #1f3c88;"/>
                </VBox>

            </HBox>

            <VBox spacing="20"
                  alignment="CENTER">

                <Label text="Operaciones"
                       style="-fx-font-size: 22px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #333;"/>

                <HBox spacing="25" alignment="CENTER">

                    <Button fx:id="btnDepositar"
                            text="Depositar"
                            prefWidth="180" prefHeight="45"
                            style="-fx-background-color: #1f3c88;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-background-radius: 10;"/>

                    <Button fx:id="btnRetirar"
                            text="Retirar"
                            prefWidth="180" prefHeight="45"
                            style="-fx-background-color: #4158a6;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-background-radius: 10;"/>

                    <Button fx:id="btnTransferir"
                            text="Transferir"
                            prefWidth="180" prefHeight="45"
                            style="-fx-background-color: #0091d5;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-background-radius: 10;"/>
                </HBox>

                <HBox spacing="25" alignment="CENTER">

                    <Button fx:id="btnHistorialTransacciones"
                            text="Historial de Transacciones"
                            prefWidth="220" prefHeight="45"
                            style="-fx-background-color: #2f3640;
                                   -fx-text-fill: white;
                                   -fx-font-size: 15px;
                                   -fx-background-radius: 10;"/>

                    <Button fx:id="btnHistorialPuntos"
                            text="Historial de Puntos"
                            prefWidth="220" prefHeight="45"
                            style="-fx-background-color: #2f3640;
                                   -fx-text-fill: white;
                                   -fx-font-size: 15px;
                                   -fx-background-radius: 10;"/>
                </HBox>

                <Button fx:id="btnCanjearPuntos"
                        text="Canjear Puntos"
                        prefWidth="300" prefHeight="50"
                        style="-fx-background-color: #ffaa00;
                               -fx-text-fill: #333;
                               -fx-font-size: 17px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 14;"/>

            </VBox>

        </VBox>
    </center>

</BorderPane>
