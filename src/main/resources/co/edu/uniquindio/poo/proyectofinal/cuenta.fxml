<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="1000" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="co.edu.uniquindio.poo.proyectofinal.CuentaController">
    <ImageView fx:id="fondo" fitHeight="650" fitWidth="1000" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@background.png" />
        </image>
    </ImageView>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="25" style="-fx-background-color: linear-gradient(to right, #162447, #1f4068);">

            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Logo + Nombre -->
            <HBox alignment="CENTER_LEFT" spacing="15">

                <ImageView fitHeight="55" fitWidth="55" preserveRatio="true" smooth="true">
                    <image>
                        <Image url="@logo.jpg" />
                    </image>
                </ImageView>

                <VBox spacing="2">
                    <Label fx:id="lblNombreCliente" style="-fx-text-fill: white;                                   -fx-font-size: 24px;                                   -fx-font-weight: bold;" text="Nombre Cliente" />

                    <Label fx:id="lblRango" style="-fx-text-fill: #ffd86b;                                   -fx-font-size: 16px;" text="Rango: Bronce" />
                </VBox>

            </HBox>

            <Pane HBox.hgrow="ALWAYS" />

            <Button fx:id="btnCerrarSesion" style="                         -fx-background-color: #e94560;                         -fx-text-fill: white;                         -fx-font-size: 14px;                         -fx-font-weight: bold;                         -fx-padding: 10 20;                         -fx-background-radius: 10;                     " text="Cerrar SesiÃ³n" />
        </HBox>
    </top>

    <!-- ===================  CENTER CONTENT  =================== -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="35">

            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <!-- Saldo / Monederos -->
            <HBox alignment="CENTER" spacing="25">

                <VBox alignment="CENTER_LEFT" prefWidth="260" spacing="10" style="                         -fx-background-color: rgba(255,255,255,0.85);                         -fx-padding: 20;                         -fx-background-radius: 12;                         -fx-effect: dropshadow(gaussian, #0003, 10, 0.3, 0, 2);                       ">

                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Monedero Principal" />

                    <Label fx:id="lblSaldoPrincipal" style="-fx-font-size: 22px;                                   -fx-font-weight: bold;                                   -fx-text-fill: #1f4068;" text="0.00" />
                </VBox>

                <VBox alignment="CENTER_LEFT" prefWidth="260" spacing="10" style="                         -fx-background-color: rgba(255,255,255,0.85);                         -fx-padding: 20;                         -fx-background-radius: 12;                         -fx-effect: dropshadow(gaussian, #0003, 10, 0.3, 0, 2);                       ">

                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Cuenta de Ahorros" />

                    <Label fx:id="lblSaldoAhorros" style="-fx-font-size: 22px;                                   -fx-font-weight: bold;                                   -fx-text-fill: #1f4068;" text="0.00" />
                </VBox>

            </HBox>

            <!-- Operaciones -->
            <VBox alignment="CENTER" prefWidth="754.0" spacing="20">

                <Label style="-fx-font-size: 22px;                               -fx-font-weight: bold;                               -fx-text-fill: white;" text="Operaciones" />

                <HBox alignment="CENTER" spacing="25">

                    <Button fx:id="btnDepositar" prefHeight="45" prefWidth="180" style="-fx-background-color: #1f4068;                                    -fx-text-fill: white;                                    -fx-font-size: 16px;                                    -fx-background-radius: 10;" text="Depositar" />

                    <Button fx:id="btnRetirar" prefHeight="45" prefWidth="180" style="-fx-background-color: #1b1b2f;                                    -fx-text-fill: white;                                    -fx-font-size: 16px;                                    -fx-background-radius: 10;" text="Retirar" />

                    <Button fx:id="btnTransferir" prefHeight="45" prefWidth="180" style="-fx-background-color: #0091d5;                                    -fx-text-fill: white;                                    -fx-font-size: 16px;                                    -fx-background-radius: 10;" text="Transferir" />
                </HBox>

                <HBox alignment="CENTER" spacing="25">

                    <Button fx:id="btnHistorialTransacciones" prefHeight="45" prefWidth="220" style="-fx-background-color: #162447;                                    -fx-text-fill: white;                                    -fx-font-size: 15px;                                    -fx-background-radius: 10;" text="Historial de Transacciones" />

                    <Button fx:id="btnHistorialPuntos" prefHeight="45" prefWidth="220" style="-fx-background-color: #162447;                                    -fx-text-fill: white;                                    -fx-font-size: 15px;                                    -fx-background-radius: 10;" text="Historial de Puntos" />
                </HBox>

                <Button fx:id="btnCanjearPuntos" prefHeight="50" prefWidth="300" style="-fx-background-color: #ffd86b;                                -fx-text-fill: #333;                                -fx-font-size: 17px;                                -fx-font-weight: bold;                                -fx-background-radius: 14;" text="Canjear Puntos" />
            </VBox>

        </VBox>
    </center>

</BorderPane>
