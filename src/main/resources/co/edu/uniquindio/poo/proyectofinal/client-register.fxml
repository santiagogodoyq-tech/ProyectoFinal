<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectofinal.ClientController">

    <children>

        <ImageView fitHeight="500" fitWidth="800" preserveRatio="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <image>
                <Image url="@background.png" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" layoutX="200.0" layoutY="-25.0" prefHeight="420" prefWidth="400" spacing="15" style="-fx-background-color: rgba(0,0,0,0.45); -fx-background-radius: 14; -fx-padding: 20;">

            <children>
      
                                <ImageView fitHeight="55.0" fitWidth="60.0">
                  <image>
                      <Image url="@logo.jpg" />
                  </image>
              </ImageView>

                <Label style="-fx-font-size: 26px; -fx-text-fill: #D4AF37; -fx-font-weight: bold;" text="Registrar Cliente" />

                <VBox spacing="5">
                    <Label style="-fx-text-fill: #D4AF37;" text="Documento de Identidad" />
                    <TextField fx:id="inputId" promptText="Ingrese su documento" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-text-fill: #D4AF37;" text="Nombre" />
                    <TextField fx:id="inputNombre" promptText="Ingrese su nombre completo" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-text-fill: #D4AF37;" text="Correo electrónico" />
                    <TextField fx:id="inputEmail" promptText="ejemplo@gmail.com" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-text-fill: #D4AF37;" text="Celular" />
                    <TextField fx:id="inputCelular" promptText="Número de celular" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-text-fill: #D4AF37;" text="Contraseña" />
                    <PasswordField fx:id="inputContrasena" promptText="Ingrese contraseña" />
                </VBox>

                <Button fx:id="btnRegistrar" prefWidth="220" style="-fx-font-size: 16px; -fx-background-color: #D4AF37; -fx-text-fill: black; -fx-background-radius: 8;" text="Registrar" />

            </children>
        </VBox>

    </children>

</AnchorPane>
