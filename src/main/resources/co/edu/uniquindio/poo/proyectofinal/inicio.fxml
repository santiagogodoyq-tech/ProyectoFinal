                   AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0"
                   AnchorPane.rightAnchor="0">
            <image>
                <Image url="@background.png"/>
            </image>
        </ImageView>

        <!-- CONTENEDOR CENTRAL -->
        <VBox spacing="25"
              alignment="CENTER"
              layoutX="200"
              layoutY="100"
